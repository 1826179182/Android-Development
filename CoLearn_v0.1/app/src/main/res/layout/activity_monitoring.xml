<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUIFrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.Monitoring"
    android:background="@color/white">
        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <xyz.doikki.videoplayer.player.VideoView
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl"
                android:layout_marginTop="-1dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                app:tl_indicator_corner_radius="2dp"
                app:tl_indicator_height="4dp"
                app:tl_indicator_width="4dp"
                app:tl_indicator_margin_bottom="6dp"
                app:tl_indicator_color="@color/xui_config_color_red"
                app:tl_textSelectColor="@color/black"
                app:tl_textUnselectColor="#AAB7CA"/>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </com.xuexiang.xui.widget.layout.XUILinearLayout>
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/arrow_left"
            android:layout_margin="10dp"/>
</com.xuexiang.xui.widget.layout.XUIFrameLayout>