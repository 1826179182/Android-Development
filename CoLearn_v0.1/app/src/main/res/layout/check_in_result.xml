<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xuexiang.xui.widget.layout.XUIFrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3FA796"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="今日打卡成功！"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="15dp"
                android:src="@mipmap/cancel" />

        </com.xuexiang.xui.widget.layout.XUIFrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/check_in_result_lottie"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="book.json"
            app:lottie_loop="false" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="dividing_line.json"
            app:lottie_loop="false" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="-35dp"
            app:cardBackgroundColor="#4DB6AC"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="每日一句"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="博学之，审问之，慎思之，明辨之，笃行之。"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text=" ——《礼记》"
            android:textSize="14dp" />
    </com.xuexiang.xui.widget.layout.XUILinearLayout>
</com.google.android.material.card.MaterialCardView>