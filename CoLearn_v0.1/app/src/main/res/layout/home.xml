<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUIFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE">

    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="242.5dp"
            android:layout_marginTop="-2dp"
            android:background="@mipmap/bg_sunflower"
            android:orientation="vertical"></com.xuexiang.xui.widget.layout.XUILinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            app:cardElevation="0dp"
            app:strokeColor="#EAEFF5"
            app:strokeWidth="1.5dp">

            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:text="八月"
                        android:textSize="17dp" />

                    <com.xuexiang.xui.widget.imageview.nine.GridImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.2"
                        android:src="@mipmap/circle" />

                    <com.xuexiang.xui.widget.imageview.nine.GridImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:layout_weight="0.03"
                    android:background="#C1CADD" />

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <com.xuexiang.xui.widget.layout.XUILinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周一" />

                        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周二" />

                        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周三" />

                        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周四" />

                        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周五" />

                        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周六" />

                        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周日" />
                    </com.xuexiang.xui.widget.layout.XUILinearLayout>

                    <com.necer.calendar.WeekCalendar
                        android:id="@+id/weekCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        app:calendarHeight="220dp"
                        app:defaultCalendar="week"
                        app:defaultCheckedSolarTextColor="@color/checked_bg"
                        app:defaultUnCheckedSolarTextColor="#8690A5"
                        app:lunarDistance="0dp"
                        app:showHoliday="false"
                        app:showLunar="false"
                        app:solarTextBold="true"
                        app:solarTextSize="15dp"
                        app:todayCheckedBackground="@color/checked_bg"
                        app:todayCheckedSolarTextColor="@color/checked_bg"
                        app:todayUnCheckedSolarTextColor="#8690A5" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
            </com.xuexiang.xui.widget.layout.XUILinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            app:el_duration="700"
            app:el_expanded="false"
            app:el_parallax="0.5">

            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/add_event"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:src="@mipmap/add_event" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="添加目标"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/clock_in"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:src="@mipmap/clock_in" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="CoLearn打卡"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/planting"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:src="@mipmap/planting" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="种植植物"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/camera"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:src="@mipmap/camera" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="实时监控"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
            </com.xuexiang.xui.widget.layout.XUILinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <com.xuexiang.xui.widget.layout.XUIFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/back_today"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"

                android:orientation="horizontal"
                app:el_duration="500"
                app:el_expanded="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-100dp"
                    app:cardBackgroundColor="#B3E5FC"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:text="返回今日"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>
            </net.cachapa.expandablelayout.ExpandableLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="95dp"
                android:layout_gravity="right"
                android:layout_marginTop="-62dp"
                app:cardBackgroundColor="#E8ECF5"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/up_and_down"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginVertical="3dp"
                    android:src="@mipmap/down" />
            </androidx.cardview.widget.CardView>

        </com.xuexiang.xui.widget.layout.XUIFrameLayout>

        <com.xuexiang.xui.widget.layout.XUIFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="25dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#EAEFF5"
                app:strokeWidth="1.5dp">

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/todolist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:divider="@null"
                        android:orientation="horizontal"></ListView>
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#FFF59D"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="待 完 成"
                    android:textSize="13dp" />
            </com.google.android.material.card.MaterialCardView>
        </com.xuexiang.xui.widget.layout.XUIFrameLayout>

    </com.xuexiang.xui.widget.layout.XUILinearLayout>

    <ImageView
        android:id="@+id/more_func"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:src="@mipmap/add" />
</com.xuexiang.xui.widget.layout.XUIFrameLayout>
